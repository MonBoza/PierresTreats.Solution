@using PierresTreats.Models

<h2>Flavors</h2>

@if (Model.Count == 0)
{
  <p>No flavors yet - add some!</p>
}
else
{
  <div class="row">
    @foreach (Flavor flavor in Model)
    {
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</h5>
          </div>
        </div>
      </div>
    }
  </div>
}

<button>@Html.ActionLink("Add a Flavor", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>
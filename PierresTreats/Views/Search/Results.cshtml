@using PierresTreats.Models;
@using System.Collections.Generic;


@model dynamic

<h2>Search Results</h2>

@if (Model is List<Treat>)
{
    var treats = (List<Treat>)Model;
    if (treats.Any())
    {
        <div class="row">
            @foreach (var treat in treats)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h3 class="card-title">@Html.ActionLink(treat.TreatName, "Details", "Treats", new { id = treat.TreatId })</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No Treat results found.</p>
    }
}
else if (Model is List<Flavor>)
{
    var flavors = (List<Flavor>)Model;
    if (flavors.Any())
    {
        <div class="row">
            @foreach (var flavor in flavors)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h3 class="card-title">@Html.ActionLink(flavor.FlavorName, "Details", "Flavors", new { id = flavor.FlavorId })</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No flavors found.</p>
    }
}
else
{
    <p>No results found.</p>
}
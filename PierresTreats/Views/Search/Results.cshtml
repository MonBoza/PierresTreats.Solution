@using PierresTreats.Models;
@using System.Collections.Generic;


@model dynamic

<h2>Search Results</h2>

@if (Model is List<Treat>)
{
    var treats = (List<Treat>)Model;
    if (treats.Any())
    {
        foreach (var treat in treats)
        {
            <h3>@Html.ActionLink(treat.TreatName, "Details", "Treats", new { id = treat.TreatId })</h3>
        }
    }
    else
    {
        <p>No Treat results found.</p>
    }
}
else if (Model is List<Flavor>)
{
    var flavors = (List<Flavor>)Model;
    if (flavors.Any())
    {
        foreach (var flavor in flavors)
        {
            <h3>@Html.ActionLink(flavor.FlavorName, "Details", "Flavors", new { id = flavor.FlavorId })</h3>
        }
    }
    else
    {
        <p>No flavors found.</p>
    }
}
else
{
    <p>No results found.</p>
}
@using PierresTreats.Models

<h2>Treats</h2>

@if (Model.Count == 0)
{
  <p>No Treats yet - add some!</p>
}
else
{
  <div class="card-deck">
    @foreach (Treat treat in Model)
    {
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</h5>
        </div>
      </div>
    }
  </div>
}


<button>@Html.ActionLink("Add a Treat", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>
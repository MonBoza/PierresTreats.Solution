@model PierresTreats.Models.Treat

<h2>Add Flavor</h2>


<h3>Add a flavor to @Model.TreatName</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select a Flavor: ")
  @Html.DropDownList("FlavorId")
  <br/>
  <input type="submit" value="Add Flavor" class="button"/>
}

<button>@Html.ActionLink("Back to Treats", "Index")</button>
@model PierresTreats.Models.Treat

<div class="card">
  <div class="card-body">
    <h2 class="card-title">Add Flavor</h2>

    <h3 class="card-subtitle">Add a flavor to @Model.TreatName</h3>

    @using (Html.BeginForm())
    {
      @Html.HiddenFor(model => model.TreatId)

      <div class="form-group">
        @Html.Label("Select a Flavor: ")
        @Html.DropDownList("FlavorId", null, new { @class = "form-control" })
      </div>

      <div class="form-group">
        <input type="submit" value="Add Flavor" class="btn btn-primary" />
      </div>
    }

 
      <button class='button'>@Html.ActionLink("Home", "Index", "Home")</button>
    </div>
</div>
